        "@typescript-eslint/parser": "^1.12.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-react": "^7.14.2",
        "eslint-plugin-react-hooks": "^1.6.1",
        "isomorphic-fetch": "^2.2.1",
        "jest": "^24.8.0",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "tslib": "^1.10.0",
        "typescript": "^3.5.3",
        "typescript-log": "^1.1.0"
